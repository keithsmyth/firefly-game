<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Turn 1"/>

    <TextView
        android:id="@+id/txt_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/txt_title"
        tools:text="Player Name"/>

    <TextView
        android:id="@+id/txt_action_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:singleLine="true"
        tools:text="Action 1"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lst_actions_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_action_1"/>

    <TextView
        android:id="@+id/txt_action_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lst_actions_1"
        android:singleLine="true"
        tools:text="Action 2"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lst_actions_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_action_2"/>

</RelativeLayout>